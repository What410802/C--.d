{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Current File - BiS",
			"type": "shell",
			"command": "g++",
			"args": [
				"-Wpedantic",
				"-Wall",
				"-Wextra",
				"-std=c++17",
				"-O2",

				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Run Only - BiS",
			"type": "shell",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"group": {
				"kind": "test",
				// "isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Looped Run - BiS",
			"type": "shell",
			"command": "${command:macros.loopRunCpp}",
			// "group": {
			//     "kind": "test",
			//     // "isDefault": true
			// },
			// "presentation": {
			//     "echo": true,
			//     "reveal": "always",
			//     "focus": true,
			//     "panel": "shared"
			// },
			"problemMatcher": []
		},
		{
			"label": "Compile and Run - BiS",
			"type": "shell",
			"dependsOn": [
				"Compile Current File - BiS"
			],
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"group": {
				"kind": "test",
				// "isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
	]
}
