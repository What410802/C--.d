{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Current File - BiS",
			"type": "cppdbg",
			"request": "launch",
			"program": "${fileDirname}/${fileBasenameNoExtension}",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb - BiS",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "Compile Current File - BiS",
			"miDebuggerPath": "gdb", // 根据实际路径修改
			"logging": {
				"moduleLoad": false,
				"trace": true
			}
		},
